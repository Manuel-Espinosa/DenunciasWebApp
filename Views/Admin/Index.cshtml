@model IEnumerable<DenunciasWebApp.Models.Complaint>

@{
    ViewData["Title"] = "Atencion Ciudadana";
}

<h1 class="title">Atencion Ciudadana</h1>
<h2 class="subtitle">Todas las denuncias</h2>

@if (!Model.Any())
{
    <div class="notification is-info">
        No hay denuncias registradas en el sistema.
    </div>
}
else
{
    <div class="table-container">
        <table class="table is-fullwidth is-striped is-hoverable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tipo</th>
                    <th>Titulo</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Crime?.Name</td>
                    <td>@item.Title</td>
                    <td>@(item.User?.Email ?? "N/A")</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Status?.Name == "Activa")
                        {
                            <span class="tag is-success">@item.Status.Name</span>
                        }
                        else if (item.Status?.Name == "En Proceso")
                        {
                            <span class="tag is-warning">@item.Status.Name</span>
                        }
                        else
                        {
                            <span class="tag is-info">@item.Status?.Name</span>
                        }
                    </td>
                    <td>
                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="button is-small is-primary">
                            Cambiar Estado
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
