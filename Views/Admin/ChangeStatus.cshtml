@model DenunciasWebApp.Models.Complaint

@{
    ViewData["Title"] = "Cambiar Estado";
}

<h1 class="title">Cambiar Estado de Denuncia</h1>

<div class="box">
    <h4 class="subtitle">Detalles de la denuncia</h4>

    <div class="content">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Tipo de Crimen:</strong> @Model.Crime?.Name</p>
        <p><strong>Titulo:</strong> @Model.Title</p>
        <p><strong>Descripcion:</strong> @Model.Description</p>
        <p><strong>Usuario:</strong> @(Model.User?.Email ?? "N/A")</p>
        <p><strong>Fecha:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
        <p>
            <strong>Estado actual:</strong>
            @if (Model.Status?.Name == "Activa")
            {
                <span class="tag is-success">@Model.Status.Name</span>
            }
            else if (Model.Status?.Name == "En Proceso")
            {
                <span class="tag is-warning">@Model.Status.Name</span>
            }
            else
            {
                <span class="tag is-info">@Model.Status?.Name</span>
            }
        </p>
    </div>

    <hr />

    <form asp-action="ChangeStatus" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="field">
            <label class="label">Nuevo Estado</label>
            <div class="control">
                <div class="select is-fullwidth">
                    <select name="statusId" asp-items="@ViewBag.Statuses"></select>
                </div>
            </div>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <button type="submit" class="button is-primary">Guardar Cambios</button>
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Cancelar</a>
            </div>
        </div>
    </form>
</div>
