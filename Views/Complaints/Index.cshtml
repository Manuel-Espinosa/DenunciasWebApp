@model IEnumerable<DenunciasWebApp.Models.Complaint>

@{
    ViewData["Title"] = "Mis Denuncias";
}

<h1 class="title">Mis Denuncias</h1>

<div class="mb-4">
    <a asp-action="Create" class="button is-primary">Nueva Denuncia</a>
</div>

@if (!Model.Any())
{
    <div class="notification is-info">
        No tienes denuncias registradas. <a asp-action="Create">Crea tu primera denuncia</a>.
    </div>
}
else
{
    <div class="table-container">
        <table class="table is-fullwidth is-striped is-hoverable">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Tipo de Crimen</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Crime?.Name</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Status?.Name == "Activa")
                        {
                            <span class="tag is-success">@item.Status.Name</span>
                        }
                        else if (item.Status?.Name == "En Proceso")
                        {
                            <span class="tag is-warning">@item.Status.Name</span>
                        }
                        else
                        {
                            <span class="tag is-info">@item.Status?.Name</span>
                        }
                    </td>
                    <td>
                        <div class="buttons are-small">
                            <a asp-action="Details" asp-route-id="@item.Id" class="button is-info is-outlined">Ver</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="button is-warning is-outlined">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="button is-danger is-outlined">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
