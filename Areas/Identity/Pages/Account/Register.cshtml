@page
@model RegisterModel
@using DenunciasWebApp.Models
@{
    ViewData["Title"] = "Registro";
}

<h1 class="title">@ViewData["Title"]</h1>

<div class="columns">
    <div class="column is-6">
        <div class="box">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="subtitle">Crear nueva cuenta</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="notification is-danger"></div>

                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.Name" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.Name" class="input" placeholder="Nombre" />
                            </div>
                            <span asp-validation-for="Input.Name" class="help is-danger"></span>
                        </div>
                    </div>
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.LastName" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.LastName" class="input" placeholder="Apellido" />
                            </div>
                            <span asp-validation-for="Input.LastName" class="help is-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.CURP" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.CURP" class="input" placeholder="CURP (18 caracteres)" maxlength="18" style="text-transform: uppercase;" />
                            </div>
                            <span asp-validation-for="Input.CURP" class="help is-danger"></span>
                        </div>
                    </div>
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.Sex" class="label"></label>
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select asp-for="Input.Sex" asp-items="Html.GetEnumSelectList<Sex>()"></select>
                                </div>
                            </div>
                            <span asp-validation-for="Input.Sex" class="help is-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.PhoneNumber" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.PhoneNumber" class="input" placeholder="Telefono (opcional)" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="help is-danger"></span>
                        </div>
                    </div>
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.BirthDate" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.BirthDate" type="date" class="input" />
                            </div>
                            <span asp-validation-for="Input.BirthDate" class="help is-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="field">
                    <label asp-for="Input.Email" class="label"></label>
                    <div class="control">
                        <input asp-for="Input.Email" class="input" autocomplete="username" placeholder="correo@ejemplo.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="help is-danger"></span>
                </div>

                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.Password" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.Password" class="input" autocomplete="new-password" placeholder="Contraseña" />
                            </div>
                            <span asp-validation-for="Input.Password" class="help is-danger"></span>
                        </div>
                    </div>
                    <div class="column">
                        <div class="field">
                            <label asp-for="Input.ConfirmPassword" class="label"></label>
                            <div class="control">
                                <input asp-for="Input.ConfirmPassword" class="input" autocomplete="new-password" placeholder="Confirmar contraseña" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="help is-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <button id="registerSubmit" type="submit" class="button is-info is-fullwidth">Registrarse</button>
                    </div>
                </div>

                <div class="has-text-centered mt-4">
                    <p>Ya tienes cuenta? <a asp-page="./Login">Iniciar sesion</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
