@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1 class="title is-2 has-text-centered">@ViewData["Title"]</h1>
<div class="columns">
    <div class="column is-one-third is-offset-one-third">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="has-text-danger" role="alert"></div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Input.Email" class="label">Correo electrónico</label>
                        <input asp-for="Input.Email" class="input" autocomplete="username" aria-required="true"
                            placeholder="nombre@ejemplo.com" />
                        <span asp-validation-for="Input.Email" class="has-text-danger"></span>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Input.Password" class="label">Contraseña</label>
                        <input asp-for="Input.Password" class="input" autocomplete="current-password"
                            aria-required="true" placeholder="contraseña" />
                        <span asp-validation-for="Input.Password" class="has-text-danger"></span>
                    </div>
                </div>
                <div class="field">
                    <label asp-for="Input.RememberMe" class="label">
                        <input class="checkbox" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="field">
                    <button id="login-submit" type="submit" class="button is-fullwidth is-info">Iniciar sesión</button>
                </div>
                <div class="content">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate como nuevo
                            usuario</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo
                            electrónico</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}